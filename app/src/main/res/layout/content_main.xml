<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.naji_astier.android_sudoku.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.naji_astier.android_sudoku.SquareGridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridView1"
        android:numColumns="9"
        android:background="@color/black"
        android:gravity="center"
        android:layout_margin="0dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/action_generate"
        android:id="@+id/button"
        android:drawableRight="@drawable/button_icon"
        android:drawableEnd="@drawable/button_icon"/>
</LinearLayout>
